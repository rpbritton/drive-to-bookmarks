{
        "manifest_version": 2,
        "name": "Drive to Bookmarks",
        "version": "1.1",

        "description": "Maps your google drive filearchy to your bookmarks bar.",

        "author": "Ryan Britton",

        "browser_action": {
                "default_popup": "popup/popup.html"
        },

        "options_page": "options/options.html",

        "permissions": [
                "identity",
                "storage",
		"bookmarks",
		"alarms",
		"background",
                "https://*.google.com/"
        ],

	"background": {
                "page": "background/background.html"
	},

	"key": "",

        "oauth2": {
                "client_id": "128778967996-s5la1qpsgal5knces7itks2k2gdm4pl9.apps.googleusercontent.com",
                "scopes": [
                        "email",
                        "profile",
                        "https://www.googleapis.com/auth/drive"
                ]
        }
}
